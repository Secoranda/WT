

@model IEnumerable<siteControl.Web.Models.Truck>
@{
    ViewBag.Title =" My Trucks";

}



<h2 class="text-department">My Trucks</h2>

<table class="table">
    <thead class="thead-dark">
    <thead>
        <tr>
           
            <th style="text-align: center;">Dispatch's Extension</th>
            <th style="text-align: center;">Truck ID</th>
            <th style="text-align: center;">Current Location</th>
            <th style="text-align: center;">Current Status</th>
            <th style="text-align: center;">Time - Date Posted </th>
            <th style="text-align: center;">Time - Date Edited </th>
            <th style="text-align: center;">Edit </th>
            <th style="text-align: center;">Delete</th>
        </tr>
    </thead>

    <tbody>
       
            @foreach (var item in Model)
            {
                <tr>

                    <td style="text-align: center;">@item.DispatchExt  </td>

                    <td style="text-align: center;">@item.TruckID  </td>
                    <td style="text-align: center;">@item.CurrentLocation </td>
                    <td style="text-align: center;">@item.CurrentStatus  </td>
                    <td style="text-align: center;">@item.Date_Posted -@item.Time_Posted </td>
                    <td style="text-align: center;">@item.Date_Edited -  @item.Time_Edited </td>
                    <td style="text-align: center;"> <a class="text-dark" href="@Url.Action("EditPage", "User")/@Html.DisplayFor(m => item.ID)">Edit</a></td>
                    <td style="text-align: center;"> <a class="pointer-arrow" onclick="deleteRow(@Html.DisplayFor(m => item.ID))"> Delete </a></td>


                </tr>
            }
        
    </tbody>
</table>
<script>
    function deleteRow(id) {
        var r = confirm("Are you sure you want to delete this record?")
        if (r == true) {
            window.location.assign("/User/Delete/" + id);
        }
    }


</script>

<style type="text/css">
    .pointer-arrow:hover {
        cursor: pointer;
    }
</style>